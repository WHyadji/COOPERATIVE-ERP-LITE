# ============================================
# COOPERATIVE ERP LITE - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update values
# DO NOT commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection settings

# Database host (use 'postgres' for Docker, 'localhost' for local)
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database user
DB_USER=postgres

# Database password (CHANGE IN PRODUCTION!)
DB_PASSWORD=postgres

# Database name
DB_NAME=koperasi_erp

# SSL mode (disable for development, require for production)
DB_SSLMODE=disable

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port (default: 8080)
SERVER_PORT=8080

# Gin mode: debug | release | test
# Use 'release' in production for better performance
GIN_MODE=debug

# ============================================
# JWT AUTHENTICATION
# ============================================

# JWT secret key (MUST CHANGE IN PRODUCTION!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Token expiration in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed origins (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# APPLICATION ENVIRONMENT
# ============================================

# Environment: development | staging | production
ENVIRONMENT=development

# ============================================
# LOGGING (Optional)
# ============================================

# Log level: debug | info | warn | error
LOG_LEVEL=debug

# Log format: json | text
LOG_FORMAT=text

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable Swagger documentation (true | false)
ENABLE_SWAGGER=true

# Enable seed data on startup (true | false)
# WARNING: Only use in development!
AUTO_SEED=false

# ============================================
# SECURITY (Optional)
# ============================================

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# ============================================
# NOTES
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Update values in .env for your environment
# 3. NEVER commit .env to Git!
# 4. Use strong JWT_SECRET in production
# 5. Use DB_SSLMODE=require in production
# 6. Set GIN_MODE=release in production
