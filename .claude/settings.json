      "Bash(fi)",
      "Bash(go tool compile:*)",
      "Bash(git log:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(echo \"Build Status: $?\")",
      "Bash(echo:*)",
      "Bash(git stash push:*)",
      "Bash(git stash:*)",
      "Bash(timeout 30s go test ./internal/security/ -run TestSecurityValidator_ValidateIPAddress -v)",
      "Bash(npm audit:*)",
